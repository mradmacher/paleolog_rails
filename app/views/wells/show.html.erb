<%= render_title @well.region.name %>
<%= render 'navigation' %>

<% actions = [] %>
<% if @well.manageable_by?( current_user ) %>
	<% actions << ['Add sample', new_well_sample_path( @well )] << 
    ['Add counting', new_well_counting_path( @well )] << 
		['Edit well', edit_well_path( @well )] %>
	<% if @well.samples.empty? %>
		<% actions << ['Delete well', well_path( @well ), :confirm => 'Are you sure', :method => :delete] %> 
	<% end %>
<% end %>
<% actions << ['Users', well_research_participations_path( @well.id )] %>
<%= render_actions actions %>
<% content_for :breadcrumb do %>
  <%= link_to bracketize( @well.region.name ), region_path( @well.region ) %> - 
  <%= link_to bracketize( @well.name ), well_path( @well ) %>
<% end %>
<%= render_heading "Well" %>
<dl class="fields">
	<dt>Name</dt>
	<dd><%= @well.name %></dd>
	<dt>Countings</dt>
	<dd>
		<ul>
		<% @well.countings.each do |counting| -%>
			<li><%= link_to counting.name, counting_path( counting ) %></li>
		<% end -%>
		</ul>
	</dd>

  <dt>Samples</dt>
  <dd>
		<ul>
		<% @well.samples.each do |sample| -%>
			<li><%= link_to sample.name, sample_path( sample ) %></li>
		<% end %>
		</ul>
  </dd>
</dl>
