<%= render_title @research_participation.region.name %>
<%= render 'navigation' %>

<% actions = [] %>
<% if @research_participation.manageable_by?(current_user) %>
  <% actions << ['Remove from research', research_participation_path(@research_participation), confirm: 'Are you sure', method: :delete] %>
<% end %>
<%= render_actions actions %>
<% content_for :breadcrumb do %>
  <%= link_to bracketize(@research_participation.region.name), region_path(@research_participation.region) %> |
  <%= link_to bracketize(@research_participation.user.name), research_participation_path(@research_participation) %>
<% end %>
<%= render_heading "Researcher" %>
<dl class="fields">
	<dt>Name</dt>
	<dd><%= @research_participation.user.name %></dd>
</dl>
